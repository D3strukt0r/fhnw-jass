<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="root"
      styleClass="background-white"
      stylesheets="@../css/app.css"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.orbitrondev.jass.client.Controller.RegisterController">
    <MenuBar>
        <Menu fx:id="mFile" text="gui.menu.file">
            <Menu fx:id="mFileChangeLanguage" text="gui.menu.file.changeLanguage" />
            <MenuItem fx:id="mFileExit" text="gui.menu.file.exit" />
        </Menu>
        <Menu fx:id="mEdit" text="gui.menu.edit">
            <MenuItem fx:id="mEditDelete" text="gui.menu.edit.delete" />
        </Menu>
        <Menu fx:id="mHelp" text="gui.menu.help">
            <MenuItem fx:id="mHelpAbout" text="gui.menu.help.about" />
        </Menu>
    </MenuBar>

    <!-- navbar -->
    <HBox styleClass="navbar">
        <Text fx:id="navbar" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="gui.register.title" />
    </HBox>

    <!-- body -->
    <VBox styleClass="custom-container">
        <VBox fx:id="errorMessage" prefHeight="0.0" />
        <Region prefHeight="10.0" VBox.vgrow="ALWAYS" />

        <JFXTextField fx:id="username" labelFloat="true" promptText="gui.register.username" />
        <Region prefHeight="20.0" VBox.vgrow="ALWAYS" />

        <JFXPasswordField fx:id="password" labelFloat="true" promptText="gui.register.password" />
        <Region prefHeight="20.0" VBox.vgrow="ALWAYS" />
        <JFXPasswordField fx:id="repeatPassword" labelFloat="true" promptText="gui.register.repeatPassword" />
        <Region prefHeight="15.0" VBox.vgrow="ALWAYS" />

        <JFXCheckBox fx:id="connectAutomatically" text="gui.login.connectAutomatically" />
        <Region prefHeight="15.0" VBox.vgrow="ALWAYS" />

        <HBox>
            <JFXButton fx:id="register" disable="true" styleClass="primary" text="gui.register.register" />
            <JFXButton fx:id="login" styleClass="secondary" text="gui.register.login" />
        </HBox>
    </VBox>
</VBox>
