<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="JassGame" packages="">
    <Appenders>
        <File name="File" fileName="logs/app.log" ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
        <Console name="Console" target="SYSTEM_OUT" ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.j256.ormlite" additivity="false">
            <AppenderRef ref="Console" level="info"/>
            <AppenderRef ref="File" level="trace"/>
        </Logger>
        <Logger name="com.j256.ormlite.stmt.StatementExecutor" additivity="false">
            <AppenderRef ref="Console" level="debug"/>
            <AppenderRef ref="File" level="trace"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File" level="trace"/>
        </Root>
    </Loggers>
</Configuration>
